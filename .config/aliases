#!/bin/sh

alias E="SUDO_EDITOR=\"emacs\" sudoedit"
alias vim="nvim"
alias e="emacs"
alias v="vim"
alias c="clear"
alias gpg="gpg2"

alias ls="ls --color=auto"
alias la="ls -alh"
alias ll="ls -lh"
alias df="df -kTh"

# git

