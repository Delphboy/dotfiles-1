# wm independent keybindings

super + Return
	$TERMINAL

super + Escape
	pkill -USR1 -x sxhkd

super + w
	$BROWSER

super + shift + x
      dmenu_prompt "Do you want to shutdown" "shutdown -h now"

super + shift + r
      dmenu_prompt "Do you want to reboot" "reboot"

ctrl + alt + l
     slock

super + e
	emacsclient -nc

XF86AudioRaiseVolume
	volume.sh inc 5

XF86AudioLowerVolume
	volume.sh dec 5

XF86AudioPlay
    mpc toggle

XF86AudioPrev
    mpc prev

XF86AudioNext
    mpc next
