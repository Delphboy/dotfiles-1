super + Return
	$TERMINAL

super + @space
      dmenu_run

super + Escape
	pkill -USR1 -x sxhkd

super + w
	$BROWSER

super + s
      scrot

super + shift + s
      scrot -s

super + shift + x
      dmenu_prompt "Do you want to shutdown" "shutdown -h now"

super + shift + r
      dmenu_prompt "Do you want to reboot" "reboot"

XF86AudioRaiseVolume
	volume.sh inc 5

XF86AudioLowerVolume
	volume.sh dec 5

XF86AudioPlay
    mpc toggle
XF86AudioPrev
    mpc prev

XF86AudioNext
    mpc next

ctrl + alt + l
     slock

super + e
    emacsclient -nc 
