modb2 = #F7F3EE
accent_1 = #664B64
accent_2 = #51553F
accent_3 = #5B5245

[global/wm]
margin-top = 0
margin-bottom = 0
override-redirect = true

[bar/top]
width = 100%
height = 20
offset-x = 0%
offset-y = 0

locale = en_US.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

